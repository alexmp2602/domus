---
import IconInstagram from "../components/icons/IconInstagram.astro";
import IconFacebook from "../components/icons/IconFacebook.astro";
---

<footer
  id="footer"
  class="bg-[#fafafa] border-t border-gray-200 mt-20 px-6 py-12 text-sm text-[#444]"
>
  <div
    class="max-w-7xl mx-auto grid gap-8 sm:grid-cols-2 lg:grid-cols-3 items-start"
  >
    <!-- Logo y descripción -->
    <div class="space-y-3">
      <img
        src="img/domus-estetica-logo.webp"
        alt="Domus Estética Profesional"
        class="w-36"
        loading="lazy"
      />
      <p>
        Estética profesional en Mendoza. Tratamientos faciales, corporales y
        bienestar integral con calidez humana.
      </p>
    </div>

    <!-- Contacto -->
    <div class="space-y-2">
      <h3 class="font-semibold text-[#e94784] text-base">Contacto</h3>
      <p>
        📍
        <a
          href="https://maps.app.goo.gl/x5GSHzbVGykpaGUQ6"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:underline"
        >
          Av. Pedro Molina 791, M5500 Mendoza
        </a>
      </p>
      <p>
        📞
        <a href="tel:+5492616609363" class="hover:underline">
          +54 9 261 660 9363
        </a>
      </p>
      <p>
        💌
        <a href="mailto:info@esteticadomus.com" class="hover:underline">
          info@esteticadomus.com
        </a>
      </p>
    </div>

    <!-- Redes -->
    <div class="space-y-2">
      <h3 class="font-semibold text-[#e94784] text-base">Seguinos</h3>
      <div class="flex gap-4 items-center">
        <a
          href="https://www.instagram.com/esteticadomus/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram"
          class="hover:scale-110 transition-transform duration-200"
        >
          <IconInstagram class="w-6 h-6" />
        </a>
        <a
          href="https://www.facebook.com/EsteticaDomus"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Facebook"
          class="hover:scale-110 transition-transform duration-200"
        >
          <IconFacebook class="w-6 h-6" />
        </a>
      </div>
    </div>
  </div>

  <!-- Créditos -->
  <div class="text-center text-xs mt-10 text-gray-400">
    © {new Date().getFullYear()} Domus Estética Profesional. Todos los derechos
    reservados.
  </div>
</footer>
