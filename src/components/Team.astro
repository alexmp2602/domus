---
const team = [
  {
    name: "Andrea",
    role: "Especialista en est√©tica corporal",
    img: "/team/andrea.webp",
  },
  {
    name: "Caro",
    role: "Especialista en tratamientos faciales",
    img: "/team/caro.webp",
  },
];
---

<section class="px-6 py-16 max-w-7xl mx-auto bg-white" id="equipo">
  <h2
    class="text-3xl sm:text-4xl font-semibold text-center mb-12 text-[#D799B9] fade-simple"
  >
    Nuestro Equipo Profesional
  </h2>

  <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-2">
    {
      team.map(({ name, role, img }) => (
        <div class="group text-center fade-simple">
          <div class="overflow-hidden rounded-full w-40 h-40 mx-auto mb-4 shadow-md">
            <img
              src={img}
              alt={name}
              class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
            />
          </div>
          <h3 class="text-xl font-medium text-gray-800">{name}</h3>
          <p class="text-[#D799B9] text-sm">{role}</p>
        </div>
      ))
    }
  </div>
</section>
