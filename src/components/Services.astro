---
import IconHandFinger from "./icons/IconHandFinger.astro";
import IconScissors from "./icons/IconScissors.astro";
import IconFaceId from "./icons/IconFaceId.astro";
import IconMassage from "./icons/IconMassage.astro";
import IconRazor from "./icons/IconRazor.astro";

const services = [
  {
    title: "Manos y Pies",
    description: "Manicuras, pedicuras y tratamientos de uñas.",
    icon: IconHandFinger,
  },
  {
    title: "Peluquería y Barbería",
    description: "Cortes, peinados, tintes y tratamientos capilares.",
    icon: IconScissors,
  },
  {
    title: "Cuidado Facial",
    description:
      "Tratamientos faciales, maquillaje, tratamientos de cejas y pestañas.",
    icon: IconFaceId,
  },
  {
    title: "Tratamientos Corporales",
    description: "Masajes relajantes y exfoliaciones.",
    icon: IconMassage,
  },
  {
    title: "Depilación",
    description: "Depilación unisex con cera y métodos seguros.",
    icon: IconRazor,
  },
];
---

<section id="servicios" class="bg-white py-20 px-6">
  <div class="max-w-7xl mx-auto text-center mb-16 fade-simple">
    <h2 class="text-4xl font-bold text-[#2b2b2b] mb-4">
      Tratamientos de Belleza
    </h2>
    <p class="text-gray-600 max-w-2xl mx-auto">
      Descubrí nuestros tratamientos faciales, corporales, de manos y pies,
      peluquería y maquillaje.
    </p>
  </div>

  <div
    class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3 fade-up max-w-7xl mx-auto"
  >
    {
      services.map(({ title, description, icon: Icon }) => (
        <article class="group rounded-2xl border border-gray-100 bg-white p-6 text-center shadow-sm transition-all duration-300 hover:bg-[#fff0f5] hover:shadow-md">
          <div class="w-14 h-14 mb-5 mx-auto rounded-full bg-[#e94784]/10 flex items-center justify-center text-[#e94784] transition-all duration-300 group-hover:scale-110 group-hover:-translate-y-1">
            <Icon />
          </div>
          <h3 class="text-xl font-semibold text-[#e94784] mb-2">{title}</h3>
          <p class="text-sm text-gray-600 leading-relaxed">{description}</p>
        </article>
      ))
    }
  </div>
</section>
